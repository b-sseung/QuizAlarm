<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:gravity="center">
        <TextView
            android:id="@+id/open_alarm_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_color_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/open_alarm_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/open_alarm_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/string9"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/stroke"
            android:orientation="vertical">
            <TextView
                android:id="@+id/open_alarm_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="문제문제문제문제문제문제문제"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_color_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_marginLeft="45dp"
            android:text="@string/string34"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/text_color_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string35"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_color_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  :  "
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/open_alarm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:focusableInTouchMode="true"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/open_alarm_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/string57"
        android:padding="20dp"
        android:background="@drawable/shadow_button"
        android:textSize="22dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
</LinearLayout>