<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:background="#FFFFFF"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/setting_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8D8D8D"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/top_text_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/string39"
                        android:textSize="23dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/top_text_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/string7"
                            android:textStyle="bold"
                            android:textSize="19dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/top_text_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/string46"
                            android:textStyle="bold"
                            android:textSize="19dp"/>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/setting_base_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/set_main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/setting_first_menu_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="@string/string40"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E7E7E7"/>
                        <LinearLayout
                            android:id="@+id/setting_menu1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/setting_menu_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingLeft="45dp"
                                android:text="@string/string41"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="17dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E7E7E7"/>
                            <TextView
                                android:id="@+id/setting_menu_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingLeft="45dp"
                                android:text="@string/string42"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="17dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E7E7E7"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/setting_first_menu_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="@string/string43"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E7E7E7"/>
                        <LinearLayout
                            android:id="@+id/setting_menu2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/setting_menu_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingLeft="45dp"
                                android:text="@string/string44"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="17dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E7E7E7"/>
                            <TextView
                                android:id="@+id/setting_menu_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingLeft="45dp"
                                android:text="@string/string45"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="17dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E7E7E7"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- android:visibility="invisible" -->
                    <FrameLayout
                        android:id="@+id/set_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:visibility="invisible"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"/>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="@drawable/shadow_back">
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <ImageView
                                                    android:id="@+id/top_imageview"
                                                    android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    android:layout_gravity="center"
                                                    android:layout_marginBottom="5dp"/>
                                                <TextView
                                                    android:id="@+id/top_textview"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/string51"
                                                    android:layout_gravity="center"/>
                                            </FrameLayout>
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <ImageView
                                                    android:id="@+id/base_imageview"
                                                    android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    android:layout_gravity="center"
                                                    android:layout_marginBottom="5dp"/>
                                                <TextView
                                                    android:id="@+id/base_textview"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/string51"
                                                    android:layout_gravity="center"/>
                                            </FrameLayout>
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"/>
                                    </LinearLayout>

                                    <CheckBox
                                        android:id="@+id/back_check0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="@string/string52"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />
                                    <CheckBox
                                        android:id="@+id/back_check1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="@string/string53"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <GridView
                                        android:id="@+id/list_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:numColumns="20"
                                        android:paddingBottom="5dp" />
                                    <CheckBox
                                        android:id="@+id/back_check2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:layout_weight="1"
                                        android:text="@string/string54"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>